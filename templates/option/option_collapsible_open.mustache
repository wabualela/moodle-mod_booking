{{!
    @template mod_booking
    Template which defines a quiz attempt feedback.
    Classes required for JS:
    * none
    Data attributes required for JS:
    * none
    Context variables required for this template:
    Example context (json):
    {
      "headerid": "headerid",
      "collapseid": "collapseid",
      "accordionid": "accordionid",
      "headername": "headername",
      "expanded": true
    }
}}

<div id="{{accordionid}}" name="optiondate-element">
  <div class="card bg-white mb-2">
      <div class="card-header border-0 p-1" id="{{headerid}}">
          <h5 class="mb-0">
            <span class="btn btn-link"
              data-toggle="collapse"
              data-target="#{{collapseid}}"
              aria-expanded="{{expanded}}"
              aria-controls="{{collapseid}}">
              <i class="fa fa-fw fa-calendar-o" aria-hidden="true"></i>
              &nbsp;{{headername}}&nbsp;
              <i class="fa fa-fw fa-trash-o deleteoptiondate" aria-hidden="true"></i>
          </span>
          </h5>
      </div>

  <div id="{{collapseid}}"
      class="collapse {{#expanded}}show{{/expanded}}"
      aria-labelledby="{{headerid}}"
      data-parent="#{{accordionid}}">
  <div class="card-body">
</div>